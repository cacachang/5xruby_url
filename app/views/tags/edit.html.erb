<h1 class="text-3xl font-bold mb-16 mt-16 ml-4">編輯標籤</h1>

<% if @tag.errors.any? %>
  <% @tag.errors.full_messages.each do |message| %>
    <h2 class="text-xl font-bold mb-16 mt-16 ml-4"><%= message %></h2>
  <% end %>
<% end %>

<div class="w-1/3 ml-4 flex">
  <%= form_with model: @tag, url: url_tags_path, method: "post" do |tag_form| %>
    <li>
      標籤：(請使用空格隔開)
      <%= tag_form.text_field :tag, class: "w-80 py-3 px-4 rounded border ring-0 focus:ring-4 focus:ring-red-100 focus:shadow-none focus:border-orange-500 focus:outline-none mb-4 ml-2" %>
    </li>
    <%= tag_form.submit '更新', class: "w-16 px-4 py-3 font-medium bg-red-200 text-neutal-900 rounded flex items-center cursor-pointer hover:bg-red-300 focus:ring-4 ring-0 focus:ring-red-100 m-auto" %>
  <% end %>
</div>