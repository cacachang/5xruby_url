<section class="flex items-center justify-center min-h-full px-4 py-12 sm:px-6 lg:px-8">
  <div class="w-full max-w-md px-10 py-12 mx-auto space-y-8 -space-y-px rounded-md shadow-2xl">
    <div class="title">
      <h2 class="mt-6 text-3xl font-bold tracking-tight text-center text-gray-900">註冊</h2>
    </div>
    <br/>
    <div class="flex justify-center border-b border-gray-200">
      <span class="relative px-4 text-gray-300 bg-white top-3">or</span>
    </div>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="flex flex-col mt-6 text-sm text-gray-500">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"name@company.com",class:"mt-2 h-9 w-full border border-gray-300 rounded outline-none px-3 text-black focus:border-gray-400" %>
      </div>

      <div class="flex flex-col mt-6 text-sm text-gray-500">
        <%= f.label :password %>
        <%= f.password_field :password, autocomplete: "new-password",placeholder:"長度至少6個字元",class:"mt-2 h-9 w-full border border-gray-300 rounded outline-none px-3 text-black focus:border-gray-400"%>
      </div>

      <div class="flex flex-col mt-6 text-sm text-gray-500">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password",class:"mt-2 h-9 w-full border border-gray-300 rounded outline-none px-3 text-black focus:border-gray-400" %>
      </div>
      <%= render "devise/shared/error_messages", resource: resource %>

      <button class="flex items-center w-full px-4 mt-8 transition-all border border-gray-300 rounded-md h-9 px-4 py-3 font-medium bg-red-200 rounded flex items-center cursor-pointer hover:bg-red-300 focus:ring-4 ring-0 focus:ring-red-100 mb-6">
        <%= f.submit "註冊",class:"text-sm text-white mx-auto bg-transparent"%>
      </button>
      
      <div class="flex justify-center mt-6">
        <p class="text-sm text-gray-500">已經有帳號了？</p>
        <%= link_to "登入", new_user_session_path, class:"link-hover text-sm text-gray-500 text-sm"%>
      </div>
    <% end %>
  </div>
</section>